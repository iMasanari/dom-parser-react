{
  "name": "dom-parser-react",
  "version": "0.2.2",
  "description": "A small parser that converts HTML to React using the DOMParser API.",
  "main": "dist/dom-parser-react.cjs.js",
  "module": "dist/dom-parser-react.esm.js",
  "browser": "./browser/",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "browser"
  ],
  "scripts": {
    "build": "npm run build:rollup && npm run build:types",
    "build:rollup": "rollup -c",
    "build:types": "tsc -p tsconfig.declaration.json",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iMasanari/dom-parser-react.git"
  },
  "keywords": [
    "react",
    "html",
    "dom",
    "parser",
    "DOMParser"
  ],
  "author": "iMasanari",
  "license": "MIT",
  "dependencies": {
    "jsdom": "^21.0.0"
  },
  "peerDependencies": {
    "@types/react": ">= 16",
    "react": ">= 16"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^5.0.2",
    "@types/jest": "^29.2.6",
    "@types/jsdom": "^20.0.1",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.10.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  }
