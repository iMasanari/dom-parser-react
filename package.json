{
  "name": "dom-parser-react",
  "version": "0.2.0",
  "description": "A small parser that converts HTML to React using the DOMParser API.",
  "main": "dist/dom-parser-react.cjs.js",
  "module": "dist/dom-parser-react.esm.js",
  "browser": "./browser/",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "browser"
  ],
  "scripts": {
    "build": "npm run build:rollup && npm run build:types",
    "build:rollup": "rollup -c",
    "build:types": "tsc -p tsconfig.declaration.json",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iMasanari/dom-parser-react.git"
  },
  "keywords": [
    "react",
    "html",
    "dom",
    "parser",
    "DOMParser"
  ],
  "author": "iMasanari",
  "license": "MIT",
  "dependencies": {
    "jsdom": "^17.0.0"
  },
  "peerDependencies": {
    "@types/react": ">= 16",
    "react": ">= 16"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^27.0.1",
    "@types/jsdom": "^16.2.13",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "jest": "^27.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
