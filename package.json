{
  "name": "dom-parser-react",
  "version": "0.2.2",
  "description": "A small parser that converts HTML to React using the DOMParser API.",
  "type": "module",
  "main": "./dist/dom-parser-react.jsdom.cjs",
  "browser": "./browser/",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "require": "./dist/dom-parser-react.browser.cjs",
        "default": "./dist/dom-parser-react.browser.js"
      },
      "require": "./dist/dom-parser-react.jsdom.cjs",
      "default": "./dist/dom-parser-react.jsdom.js"
    },
    "./browser": {
      "require": "./dist/dom-parser-react.browser.cjs",
      "default": "./dist/dom-parser-react.browser.js"
    }
  },
  "files": [
    "dist",
    "browser"
  ],
  "scripts": {
    "build": "npm run build:rollup && npm run build:types",
    "build:rollup": "rollup -c",
    "build:types": "tsc -p tsconfig.declaration.json",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iMasanari/dom-parser-react.git"
  },
  "keywords": [
    "react",
    "html",
    "dom",
    "parser",
    "DOMParser"
  ],
  "author": "iMasanari",
  "license": "MIT",
  "peerDependencies": {
    "@types/react": ">= 16",
    "jsdom": "^21.0.0",
    "react": ">= 16"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "jsdom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^5.0.2",
    "@types/jsdom": "^20.0.1",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "jsdom": "^21.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.10.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "typescript": "^4.9.4",
    "vitest": "^0.27.3"
  }
}
